<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qhbsq.grab.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信分享(文本)"
        android:onClick="weichat_share_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信分享(图片)"
        android:onClick="weichat_share_image"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信分享(链接)"
        android:onClick="weichat_share_link"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信登入"
        android:onClick="weichat_login"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博登入"
        android:onClick="weibo_login"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博分享"
        android:onClick="weibo_share"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qq登入"
        android:onClick="qq_login"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qq分享"
        android:onClick="qq_share"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qq空间分享"
        android:onClick="qq_qzone_login"/>

    <TextView
        android:id="@+id/share_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录分享结果查询"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="@color/colorAccent"/>
</LinearLayout>
